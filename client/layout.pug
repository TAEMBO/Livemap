mixin navigation
  nav.navbar.fixed-top.navbar-expand-lg.navbar-dark
    .container
      a.navbar-brand()
        img.d-inline-block.align-center(src="/images/favicon.png", height='40')
        span.d-inline-block.ms-2 #{(server.name === '' ? 'Server Offline' : server.name.replace('! ! IRTGaming | ', ''))}
      ul.navbar.nav
        li.nav-item
          a.button(href='/')=('Home')
        li.nav-item
          a.button(href='/cs')=('Corn Silage')
        li.nav-item
          a.button(href='/gs')=('Grass Silage')
        li.nav-item
          a.button(type='button', onclick='toggleDarkMode()') Toggle theme

